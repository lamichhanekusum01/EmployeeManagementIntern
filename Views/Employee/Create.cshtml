
@model EmployeeManagement.Models.EmployeeViewModel
@{
    ViewData["Title"] = "Index";
    //Layout = null;
    var data = ViewBag.Gender;
}

<div class="modal-content">
    <div class="modal-header">
        <span class="close">&times;</span>
        <h2>New Employee</h2>
        <p>Enter Information About Employee</p>
    </div>
    <div class="modal-body">
        <form name="user-form" class="form-content" asp-controller="Employee" asp-action="Create" method="post">
            <input type="hidden" asp-for="Employee_Id" />
            <div class=" form-name-details">
                <div class=" name">
                    <label for="fname">First Name</label>
                    <input type="text" asp-for="FirstName" id="fname" name="FirstName" required />
                </div>
                <div class=" name">
                    <label for="mname">Middle Name</label>
                    <input type="text" asp-for="MiddleName" id="mname" name="MiddleName" required />
                </div>
                <div class="name">
                    <label for="lname">Last Name</label>
                    <input type="text" asp-for="LastName" id="lname" name="LastName" required />
                </div>
            </div>
            <div class=" form-salary-designation-details">

                <div class="name">
                    <label for="designation">Designation</label>
                    <select id="Designation_Id" name="Designation_Id" asp-for="DesignationName" asp-items="ViewBag.designation">
                    </select>
                </div>
                <div class="name">
                    <label for="salary">Salary</label>
                    <input type="number" asp-for=" Salary" name="salary" id="salary">
                </div>
            </div>

            <div class=" form-mail-details">
                <div class="name">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" asp-for="Email" required />
                </div>

                <div class="name">
                    <label for="username">User Name</label>
                    <input type="text" name="username" asp-for="UserName" id="username ">
                </div>
            </div>
            <div class="user form-add-phn-details">

                <div class="name">
                    <label for="address">Address:</label>
                    <input type="text" asp-for="Address" id="address" name="address">
                </div>

                <div class="name">
                    <label for="phone">Phone:</label>
                    <input type="tel" id="phone" asp-for="Phone" name="phone">
                </div>
            </div>
            <div class="user form-dob-gender-details">
                <div class="name">
                    <label for="dob">Date Of Birth:</label>
                    <input type="date" asp-for="Dob" id="dob" name="dob">
                </div>

                <div class="name gender">
                    <span>Gender:</span>
                    <div class="gender-content">
                        <div>
                            @foreach (var item in data)
                            {
                                <input type="radio" value="@item.Value" asp-for="Gender_Id" name="Gender_Id">
                                <label for="GenderName">@item.Text</label>
                            }
                        </div>

                    </div>


                </div>
            </div>

            <div class="">
                <div class="submit-btn modal-footer">



                    <button id="formSubmit" type="submit">Submit</button>


                </div>
            </div>

        </form>
    </div>
</div>
<script src="~/js/employee.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(function(){
        $(document).ready(function () {
            $(".close").click(function () {
                $("#myModal").hide();
            });
        });
    });
</script>