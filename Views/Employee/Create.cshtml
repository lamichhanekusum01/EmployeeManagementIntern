
@model EmployeeManagement.Models.EmployeeViewModel
@{
    ViewData["Title"] = "Index";
    //Layout = null;
    var data = ViewBag.Gender;
}
<style>
    .text-danger{
        color:red;
        font-size: 5px;
    }
</style>

<head>
    

        @*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        $(function () {
            $(document).ready(function () {
                $(".close").click(function () {
                    $("#myModal").hide();
                });
            });
        });
    </script>
</head>
<div class="modal-content">
    <div class="modal-header">
        <span class="close">&times;</span>
        <h2>New Employee</h2>
        <p>Enter Information About Employee</p>
    </div>
    <div class="modal-body">
        <form id="employeeList" name="user-form" class="form-content" asp-controller="Employee" asp-action="Create" method="post">
            
            <input type="hidden" asp-for="Employee_Id" />
            <div class=" form-name-details">
                <div class=" name">
                    <label for="fname">First Name</label>
                    <input type="text" asp-for="FirstName" id="fname" name="FirstName" />
                   <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class=" name">
                    <label for="mname">Middle Name</label>
                    <input type="text" asp-for="MiddleName" id="mname" name="MiddleName"  />
                </div>
                <div class="name">
                    <label for="lname">Last Name</label>
                    <input type="text" asp-for="LastName" id="lname" name="LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class=" form-salary-designation-details">

                <div class="name">
                    <label for="designation">Designation</label>
                    <select id="Designation_Id" name="Designation_Id" asp-for="DesignationName" asp-items="ViewBag.designation">
                    </select>
                </div>
                <div class="name">
                    <label for="salary">Salary</label>
                    <input type="number" asp-for=" Salary" >
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
            </div>

            <div class=" form-mail-details">
                <div class="name">
                    <label for="email">Email:</label>
                    <input type="email"  asp-for="Email"  />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="name">
                    <label for="username">User Name</label>
                   @* <input type="text" name="username" asp-for="UserName" id="username" />*@
                    <input type="text" asp-for="UserName"  />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="user form-add-phn-details">

                <div class="name">
                    <label for="address">Address:</label>
                    <input type="text" asp-for="Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="name">
                    <label for="phone">Phone:</label>
                    <input type="number" asp-for="Phone" placeholder="Enter phone"  />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="user form-dob-gender-details">
                <div class="name">
                    <label for="dob">Date Of Birth:</label>
                    <input type="date" asp-for="Dob" value="@Model.Dob"  />
                    <span asp-validation-for="Dob" class="text-danger"></span>
                </div>

                <div class="name gender">
                    <span>Gender:</span>
                    <div class="gender-content">
                        <div>
                            @foreach (var item in data)
                            {
                                <input type="radio" value="@item.Value" asp-for="Gender_Id" name="Gender_Id"  />
                                <label for="GenderName">@item.Text</label>
                            }
                        </div>

                    </div>
                    <span asp-validation-for="Gender_Id" class="text-danger"></span>



                </div>
            </div>

            <div class="">
                <div class="submit-btn modal-footer">



                    <button id="formSubmit" type="submit">Submit</button>


                </div>
            </div>

        </form>
    </div>
</div>
