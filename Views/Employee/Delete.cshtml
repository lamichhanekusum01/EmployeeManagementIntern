@model EmployeeManagement.Models.EmployeeViewModel
@{
    ViewData["Title"] = @Model.FirstName;
}
<h2>Are you sure to delete the following?</h2>
<ul class="list-group">
    <li class="list-group-item">First Name: @Model.FirstName</li>
    <li class="list-group-item">Middle Name: @Model.MiddleName</li>
    <li class="list-group-item">Last Name: @Model.LastName</li>
    <li class="list-group-item">Address: @Model.Address</li>
   @*li class="list-group-item">Gender: @Model.GenderName</li>*@
    <li class="list-group-item">Date of birth: @Model.Dob</li>
</ul>
<form asp-controller="Employee" asp-action="Delete" method="POST">
    <input type="hidden" asp-for="Employee_Id">
    <button type="submit" class="btn btn-danger">Delete </button>
</form>
